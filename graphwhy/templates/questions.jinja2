        function submitEditedQuestion(){
            var url = "{{request.route_url('question_action',action='edit',questionid="",optionid="", date='') }}";
            url = url.substring(0, url.length-3);
            url += "/" + document.getElementById("editQuestionField").value.replace(/ /g,"_");
            url += "/" + document.getElementById("editColorField").value;
            url += "/" + currentQuestionId;
            return url; 
