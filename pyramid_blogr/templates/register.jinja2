{% extends "pyramid_blogr:templates/layout.jinja2" %}

{% block content %}

    <div class="man-tabs">
        <div class="man-tab man-active">
            <a href="{{request.route_url('home')}}">Register</a>
        </div>
        {% if request.authenticated_userid %}
            <div class="man-tab">
                <a href="{{ request.route_url('question',action='create') }}">Question</a>
            </div>
        {% else %}
            <div class="man-tab man-tab-disabled">
                <a>Question</a>
            </div>
        {% endif %}
    </div>

    <!-- REGISTRATION FORM-->
    <form action="{{request.route_url('home')}}" method="post" class="form sg-form">
        <h1 class="sg-p-color">Subscribe</h1>
        <p class="sg-p-color">Enter your <b>email</b> address and we will contact you randomly... maybe.</p>    <!-- CUSTOM ERROR REGISTRATION FOR NON-UNIQUE ENTRIES -->
        {% for error in form.username.errors %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endfor %}
        <div class="form-group">
            <label for="title" class="sg-a1-color">{{form.username.label}}</label>
            {{form.username(class_='form-control')}}
        </div>

        {% for error in form.password.errors %}
            <div class="alert alert-danger">{{error}}</div>
        {% endfor %}
        <div class="form-group" style="display:none">
            <label for="body">{{form.password.label}}</label>
            {{form.password(class_='form-control', value="badpassword")}}
        </div>

        <div class="form-group">
            <label></label>
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>
{% endblock %}
