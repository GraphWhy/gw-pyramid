{% extends "pyramid_blogr:templates/layout.jinja2" %}

{% block content %}

    <form action="{{request.route_url('question_action',action='create')}}" method="post" class="form">
        <p class="sg-p-color">Enter a <b>question</b> to contribute to our list.</p>    <!-- CUSTOM ERROR REGISTRATION FOR NON-UNIQUE ENTRIES -->
        {% if action =='edit' %}
            {{ form.id() }}
        {% endif %}
        <div class="form-group">
            <div class="internal-form-group">
                {# Question form #}
                <label for="title" class="sg-a1-color">{{ form.question.label }}</label>
                {% for error in form.question.errors %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endfor %}
                {{ form.question(class_='') }}
            </div>
            <div class="internal-form-group">
                {# Type form #}
                <label for="body" class="sg-a1-color">{{ form.type.label }}</label>
                {% for error in form.type.errors %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endfor %}
                {{ form.type(class_='') }}
            </div>
            <div class="internal-form-group">
                {# Description form #}
                <label for="body" class="sg-a1-color">{{ form.description.label }}</label>
                {% for error in form.description.errors %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endfor %}
                {{ form.description(class_='', value_='hi') }}
            </div>
        </div>
        <div class="form-group">
            <label></label>
            <button type="submit" class="btn btn-default">Submit Question</button>
        </div>
    </form>
        
{% endblock %}